<%= form_with model: model do |form| %>
<TABLE>
	<THEAD>
    <TR>
        <TD>
           <%= form.label :name %>
        </TD>
        <TD>
    <%= form.text_field :name %>
    <% @model.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
        </TD>
    </TR>
	</THEAD>
    <TR>
        <TD>
             <%= form.label :description %><br>
        </TD>
        <TD>
    <%= form.text_area :description , cols: 50, rows: 10 %><br>
    <% @model.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
        </TD>
    </TR>
    <TR class="foot">
        <TD colspan="2">
             <%= form.submit %>
        </TD>
    </TR>
</TABLE>
<% end %>
